<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.postory">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/postory_logo_foreground"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/postory_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.UserSearchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searcable" />
        </activity>
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="XXXXX" />

        <activity
            android:name=".activities.SelfProfilePageActivity"
            android:exported="true" />
        <activity android:name=".activities.ActivityStreamActivity" />
        <activity
            android:name=".activities.OtherProfilePageActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ToolbarActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CreatePostActivity"
            android:exported="true" />

        <activity android:name=".activities.ListFilteredPostsActivity" />

        <activity android:name=".activities.ExploreActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity android:name=".activities.SinglePostActivity">

        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>